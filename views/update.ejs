<!DOCTYPE html>
<html>

<head>
    <title>Başarsoft Personel Kontrol Panel</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<body>
    <img src="https://www.basarsoft.com.tr/wp-content/uploads/2020/01/basarsoft-logo-png-version-1024x192.png" width="600" height="150" class="mw-100" alt="Logo">
    <div class="container">
        <h4 class="text-center">Personel Güncelleme</h4>
        <form method="POST">
            <% data.forEach( data=> { %>
                <div class="form-group">
                    <label for="name">İsim</label>
                    <input type="text" class="form-control" id="name" name="Isim" placeholder="İsim Giriniz" value="<%= data.isim %>">
                </div>
                <div class="form-group">
                    <label for="surname">Soyisim</label>
                    <input type="text" class="form-control" id="Soyisim" name="Soyisim" placeholder="Soyisim Giriniz" value="<%= data.soyisim %>">
                </div>
                <div class="form-group">
                    <label for="gender">Cinsiyet</label>
                    <select class="form-control" id="gender" name="Cinsiyet">
                <option name="<%= data.cinsiyet %>"><%= data.cinsiyet %></option>
                <option name="Erkek">Erkek</option>
                <option name="Kadın">Kadın</option>
            </select>
                </div>
                <div class="form-group">
                    <label for="job">Meslek</label>
                    <select class="form-control" name="Meslek" id="job">
                <option name="<%= data.meslek %>"><%= data.meslek %></option>
                <option name="Bilgisayar Mühendisi">Bilgisayar Muhendisi</option>
                <option name="Yazılım Mühendisi">Yazilim Muhendisi</option>
                <option name="IT">IT</option>
                <option name="Halkla İlişkiler">Halkla Iliskiler</option>
                <option name="Temizlik Görevlisi">Temizlik Gorevlisi</option>
            </select>
                </div>
                <div class="form-group">
                    <label for="salary">Maas</label>
                    <input type="text" class="form-control" id="salary" name="Maas" placeholder="Maaş Giriniz" value="<%= data.maas %>">
                </div>
                <div class="form-group">
                    <label for="position">Pozisyon</label>
                    <input type="text" class="form-control" id="position" name="Pozisyon" placeholder="Pozisyon Giriniz" value="<%= data.pozisyon %>">
                </div>

                <button type="submit" class="btn btn-primary btn-block">Güncelle</button>
                <% }) %>
        </form>

        <strong><em>
                <footer class="text-center mb-4">Basarsoft &copy;</footer></strong></em>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>

</html>
